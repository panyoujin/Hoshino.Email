            <TextBlock x:Name="tbMsg" FontSize="18" Text="WPF窗口属性设置(无边框,任务栏隐藏图标,任务管理器应..._CSDN博客" MaxWidth="220" TextWrapping="Wrap" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>

            <Button Grid.Row="1" Style="{StaticResource MaterialDesignFlatButton}" x:Name="btnOK"  Click="BtnOK_Click" HorizontalAlignment="Center">确定</Button>
        </Grid>
    <!--</Border>-->
</Window>
